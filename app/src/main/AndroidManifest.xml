<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.androidbed">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".AndroidFSR.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Emergency.Add_Hospital"
            android:label="ADD HOSPITAL DETAILS" />
        <activity
            android:name=".Emergency.Findnearesthospital"
            android:label="NEAR HOSPITALS" />
        <activity
            android:name=".Emergency.emergencyhome"
            android:label="EMERGENCY" />
        <activity
            android:name=".AndroidFSR.ViewPositionActivity"
            android:label="BED POSITION" />
        <activity
            android:name=".AndroidFSR.PositionActivity"
            android:label="CHECK POSITION" />
        <activity
            android:name=".HomeActivity"
            android:label="HOME" />
        <activity
            android:name=".Authentication.Register"
            android:label="REGISTER" />
        <activity
            android:name=".Authentication.Login"
            android:label="LOGIN" />
        <activity
            android:name=".MedecineInfo.AddEditReminder"
            android:label="REMINDER SETTER" />
        <activity
            android:name=".MedecineInfo.MainView"
            android:label="MEDICINE" />
        <activity
            android:name=".MedecineInfo.ReminderView"
            android:label="REMINDERS" />
        <activity
            android:name=".MedecineInfo.MedecineBoxSwitches"
            android:label="MEDICINE BOXES" />
        <activity
            android:name=".MedecineInfo.MedecineInfo"
            android:label="MEDICINE DETAILS" />

        <receiver android:name=".MedecineInfo.AlertReceiver" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>